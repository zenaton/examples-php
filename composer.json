{
    "name": "zenaton/examples-php",
    "description": "Some examples written in PHP showcasing features of Zenaton",
    "license": "Apache-2.0",
    "require": {
        "php": ">=5.6",
        "vlucas/phpdotenv": "^2.4",
        "zenaton/zenaton-php": "^0.3"
    },
    "config": {
        "platform": {
            "php": "5.6.6"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "": [
                "src/Events",
                "src/Recursive",
                "src/Tasks",
                "src/Workflows"
            ]
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    }
}
